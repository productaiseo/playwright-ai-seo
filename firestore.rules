rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Kullanıcıların kendi profillerini yönetmesine izin ver
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Temporary: Allow admin access to analysisJobs collection
    match /analysisJobs/{document=**} {
      allow read, write: if true; // TEMPORARY - replace with proper auth
    }

    // Development rules: allow all (emulator only)
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
